<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Phần đã được chọn -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FFFFFF" /> <!-- Màu của phần đã được chọn -->
            </shape>
        </clip>
    </item>
    <!-- Phần chưa được chọn -->
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <solid android:color="#C0C0C0" /> <!-- Màu của phần chưa được chọn -->
            </shape>
        </clip>
    </item>
</layer-list>