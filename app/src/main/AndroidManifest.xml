        <activity
            android:name=".MusicPlayer"
            android:exported="false" />
        <activity
            android:name=".podcastsActivity"
            android:exported="false" />
        <activity
            android:name=".musicListPageActivity"
            android:exported="false" />
        <activity
            android:name=".musicpageActivity"
            android:exported="false"
