            android:name=".MusicPageActivity"
            android:exported="false"
            android:label="@string/title_activity_music_page"
            android:theme="@style/Theme.DeAn" />
        <activity
            android:name=".MusicListPageActivity"
            android:exported="false"
            android:label="@string/title_activity_music_list_page"
            android:theme="@style/Theme.DeAn" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>